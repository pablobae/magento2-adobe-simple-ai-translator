                    </resource>
                </resource>
                <resource id="Pablobae_SimpleAiTranslator::simpleaitranslator" title="Simple AI Translator" sortOrder="100">
                    <resource id="Pablobae_SimpleAiTranslator::translate" title="Translate Content" sortOrder="10"/>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
